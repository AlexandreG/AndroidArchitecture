<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.zzi.androidarchitecture">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".common.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="fr.zzi.androidarchitecture.feature.daylist.ui.DayListActivity"
            android:label="@string/activity_title_day_list">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".feature.detailedweather.ui.DetailedWeatherActivity"
            android:label="@string/activity_detailed_view" />

    </application>

</manifest>